			"lh"           : "@include line-height(${1:16});$0",
			"mq"           : "// === $1> ===\n@media screen and (${2:min}-width: ${1:768px}) {\n\t$0\n}\n// === end $1> ===",
			"op"           : "@include opacity(${1:60});$0",
			"rm"           : "// === <$1 ===\n@include respond-max(${1:768px}) {\n\t$0\n}\n// === end <$1 ===",
