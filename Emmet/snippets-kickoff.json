	"html": {
		"extends": "html",
		"snippets": {
			"cols"           : "<div class=\"row\">\n\t<div class=\"span-${1:6} col\">\n\t\t$3\n\t</div>\n\t<div class=\"span-${2:6} col\">\n\t\t$4\n\t</div>\n</div>$0",
			"col"           : "<div class=\"span-${1:12} col\">\n\t$2\n</div>$0",
			"f"           : "<form action=\"#\"${1: class=\"form-horizontal\"}>\n\t${2:<fieldset>\n\t\t<legend>${3:Your form}</legend>\n\t\t|\n\t</fieldset>}\n</form>",
			"fi"           : "<li class=\"control-item\">\n\t<label for=\"${1:name}\" class=\"control-label\">${2:Label}</label>\n\t<div class=\"control-input\">\n\t\t<input type=\"${3:text}\" id=\"$1\"${4: placeholder=\"Placeholder text\"} />\n\t</div>\n</li>$0",
			"fg"           : "<ul class=\"control-group\">\n\t<li class=\"control-item\">\n\t\t<label for=\"name\" class=\"control-label\">Name</label>\n\t\t<div class=\"control-input\">\n\t\t\t<input type=\"text\" id=\"name\" placeholder=\"Zander Martineau\" />\n\t\t</div>\n\t</li>\n\t<li class=\"control-item\">\n\t\t<label for=\"email\" class=\"control-label\">Email</label>\n\t\t<div class=\"control-input\">\n\t\t\t<input type=\"email\" id=\"email\" placeholder=\"zmartineau@tmw.co.uk\" />\n\t\t</div>\n\t</li>\n\t<li class=\"control-item\">\n\t\t<label for=\"phone\" class=\"control-label\">Phone</label>\n\t\t<div class=\"control-input\">\n\t\t\t<input type=\"number\" id=\"phone\" placeholder=\"020 123 4567\" />\n\t\t</div>\n\t</li>\n\t<li class=\"control-item\">\n\t\t<label for=\"comments\" class=\"control-label\">Comments</label>\n\t\t<div class=\"control-input\">\n\t\t\t<textarea id=\"comments\" rows=\"3\" cols=\"50\" class=\"input-xlarge\"></textarea>\n\t\t</div>\n\t</li>\n</ul>",
			"note"           : "<span class=\"form-note\">?<span>First name &amp; last name</span></span>",
			"pic"           : "<picture alt=\"\">\n\t<source media=\"(min-width: 45em)\" srcset=\"${1:large}-1.jpg 1x, ${1:large}-2.jpg 2x\">\n\t<source media=\"(min-width: 18em)\" srcset=\"${2:medium}-1.jpg 1x, ${2:medium}-2.jpg 2x\">\n\t<source srcset=\"${3:small}-1.jpg 1x, ${3:small}-2.jpg 2x\">\n\t<img src=\"${3:small}-1.jpg\">\n</picture>$0",
			"row"           : "<div class=\"row\">\n\t$0\n</div>",
			"tabs"           : "<ul class=\"tabs group\">\n\t<li>\n\t\t<a href=\"#tab_1\" class=\"active\">${1:Tab 1}</a>\n\t</li>\n\t<li>\n\t\t<a href=\"#tab_2\">${2:Tab 2}</a>\n\t</li>\n</ul>\n<ul class=\"tabs-content${3: contained}\">\n\t<li id=\"tab_1\" class=\"active\">\n\t\t<h3>$1 content</h3>\n\t\t<p>Pellentesque</p>\n\t</li>\n\t<li id=\"tab_2\">\n\t\t<h3>$2 content</h3>\n\t\t<p>Lorem ipsum</p>\n\t</li>\n</ul>"
			// ""           : "",
